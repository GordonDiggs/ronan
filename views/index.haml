%html
  %head
    %script{ :src => 'http://code.jquery.com/jquery-1.7.2.min.js', :type => 'text/javascript' }
    %script{ :src => '/scripts.js', :type => 'text/javascript' }

  %body
    .content
      .player
        - if @first_song[:url]
          .now-playing
            Now Playing:
            %span.title= @first_song[:title]
            by
            %span.artist= @first_song[:artist]
            . Added by
            %span.added_by= @first_song[:added_by]
            \-
            %a{ :href => @first_song[:url], :target => '_blank' } download
          
          %audio{ :src => @first_song[:url], :autoplay => 'autoplay', :controls => 'controls', :song_key => @key }
            Bro, get a real browser, like Chrome or something.
          %input.song-key{ :type => 'hidden', :value => @first_song[:key] }
          
        - else
          Damn! No songs :( - want to suggest one?

      %form.suggest{ :action => '/add_song', :method => 'post' }
        %input.title{ :type => 'text', :name => 'title', :placeholder => 'title' }
        %input.artist{ :type => 'text', :name => 'artist', :placeholder => 'artist' }
        %input.url{ :type => 'text', :name => 'url', :placeholder => 'url' }
        %input.added_by{ :type => 'text', :name => 'added_by', :placeholder => 'your name' }
        %input.submit{ :type => 'submit', :value => 'add song' }

    .footer
      Created by Gordon Diggs in 2012
      %p.disclaimer Disclaimer: only play music you are legally allowed to use, and do so at your own risk.
